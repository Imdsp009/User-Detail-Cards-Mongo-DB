<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Users</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
  <div class="min-h-screen bg-zinc-900 text-white p-10">
    <!-- Navigation -->
    <div class="nav mb-10">
      <a class="text-blue-500 hover:underline" href="/">‚Üê Home</a>
    </div>
    
    <!-- Page Title -->
    <h1 class="text-4xl font-bold tracking-tight mb-6 text-center text-yellow-400">All Users</h1>
    
    <!-- Users Grid -->
    <div class="users grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <% if (users.length > 0) { %>
        <% users.forEach(function(user) { %>
          <div class="user bg-zinc-800 rounded-lg shadow-lg overflow-hidden">
            <!-- User Image -->
            <div class="w-full h-72 bg-zinc-700">
              <img class="w-full h-full object-cover object-center" src="<%= user.image %>" alt="<%= user.name %>">
            </div>
            <!-- User Details -->
            <div class="p-5">
              <h3 class="text-xl font-semibold tracking-tight mb-1 text-white"><%= user.name %></h3>
              <p class="text-sm text-zinc-400 mb-4"><%= user.email %></p>
              <!-- Action Buttons -->
              <div class="flex gap-4">
                <a class="px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition" href="/edit/<%= user._id %>">Edit</a>
                <a class="px-4 py-2 bg-red-500 text-white rounded-lg hover:bg-red-600 transition" href="/delete/<%= user._id %>">Delete</a>
              </div>
            </div>
          </div>
        <% }); %>
      <% } else { %>
        <!-- No Users Message -->
        <div class="col-span-full text-center">
          <h3 class="text-2xl text-zinc-500">No users yet.</h3>
          <p class="text-zinc-400 mt-2">Click <a href="/" class="text-blue-500 hover:underline">here</a> to add a new user.</p>
        </div>
      <% } %>
    </div>
  </div>
</body>
</html>
